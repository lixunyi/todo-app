# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index
GET     /todos                        controllers.TodoController.index
GET     /addTodo                      controllers.TodoController.addTodoPage
POST    /addTodo                      controllers.TodoController.addTodo
GET     /deleteTodo/:id               controllers.TodoController.delete(id:Long)
GET     /editTodo/:id                 controllers.TodoController.editTodoPage(id:Long)
POST    /editTodo                     controllers.TodoController.editTodo()

GET     /categorys                    controllers.CategoryController.index
GET     /addCategory                  controllers.CategoryController.addCategoryPage
POST    /addCategory                  controllers.CategoryController.addCategory
GET     /deleteCategory/:id           controllers.CategoryController.delete(id:Long)
GET     /editCategory/:id             controllers.CategoryController.editCategoryPage(id:Long)
POST    /editCategory                 controllers.CategoryController.editCategory()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
